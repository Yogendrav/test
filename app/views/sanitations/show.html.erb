
<% if flash[:notice] -%>
    <br />
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Uspješno</strong> ste dodali novu sanitaciju!
    </div>
<% end -%>

  <div class="row-fluid content">
    <div class="span12 content-left row-padding">
      <h2>Podaci o sanitaciji</h2>
      <div class="row-fluid">
            <div class="span12 well">
                <div class="span3">
                    <dl class="dl-horizontal">
                        <!-- <div class="well well-small well-show">
                            <dt>Dobavljač:</dt>
                            <%# if @product.supplier.name %>
                              <dd><%#= @product.supplier.name %></dd>
                            <%# else %>
                              <dd>N/A</dd>
                            <%# end %>
                        </div> -->
                        <div class="well well-small well-show">
                            <dt>Datum početka:</dt>
                            <% if @sanitation.start_date %>
                              <dd><%= @sanitation.start_date %></dd>
                            <% else %>
                              <dd>N/A</dd>
                            <% end %>
                        </div>
                        <div class="well well-small well-show">
                            <dt>Datum isteka:</dt>
                            <% if @sanitation.end_date %>
                              <dd><%= @sanitation.end_date %></dd>
                            <% else %>
                              <dd>N/A</dd>
                            <% end %>
                        </div>
                        <div class="well well-small well-show">
                            <dt>Proizvod:</dt>
                            <% if @sanitation.product_id %>
                              <dd><%= @sanitation.product_id %></dd>
                            <% else %>
                              <dd>N/A</dd>
                            <% end %>
                        </div>
                    </dl>
                </div>
                <div class="span4">
                    <dl class="dl-horizontal">
                        <div class="well well-small well-show">
                            <dt>Klijent:</dt>
                            <% if @sanitation.client_id  %>
                              <dd><%= @sanitation.client_id %></dd>
                            <% else %>
                              <dd>N/A</dd>
                            <% end %>
                        </div>
                    </dl>
                </div>
                <div class="span4">
                    <dl class="dl-horizontal">
                        <div class="well well-small well-show">
                            <dt>Adresa:</dt>
                            <% if @sanitation.address_id %>
                              <dd><%= @sanitation.address_id %></dd>
                            <% else %>
                              <dd>N/A</dd>
                            <% end %>
                        </div>
                    </dl>
                </div>
            </div>
            <div class="row-fluid">
                <div class="form-actions">
                    <% if current_user.has_role? :admin %>
                    <%= link_to 'Uredi', edit_sanitation_path(@sanitation), :class => "btn btn-warning btn-edit btn-coffee" %>
                    <% end %>
                </div> 
            </div>
      </div>
    </div>
  </div>
