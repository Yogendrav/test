<table class="table">
  <% unless @orders.blank? %>
	<tr class="th-hide">
		<th>Broj narudžbe<%#= sort_link @search, :id, 'Broj narudžbe' %></th>
		<th>Klijent<%#= sort_link @search, :name, 'Klijent' %></th>
		<th>Datum narudžbe</th>
        <th>Auctus Zarada</th>
		<th></th>
		<th></th>
	</tr>

	    <% @orders.each do |order| %>
            <tr class="client-row" id="<%= order.id %>">
                <td><%= order.id %></td>
                <td><%= order.client.name %></td>
                <td><%= order.order_date %></td>
                <td><%= order.invoices.map(&:price_percentage).sum %></td>
                <td>
                    <%#= link_to image_tag("details.png", :class => 'details'), order, :class => 'hrefa' %>
                    <%= link_to image_tag("details.png", :class => 'details'), edit_order_path(order), :class => 'hrefa' %>
                </td>
                <td><%= link_to 'Briši', order, :method => :delete, :data => { :confirm => 'Jeste li sigurni da želite izbrisati narudžbu?' }, :class => "btn btn-coffee brand brand-back hdr-back" %></td>
            </tr>
	    <% end %>
  <% else %>
      Niste unjeli ni jednu narudžbu
  <% end %>
</table>
<div>
	<%# will_paginate @orders %>
</div>
<br />

