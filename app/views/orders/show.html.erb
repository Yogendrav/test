						<% @invoices.each do |invoice| %>
							<div class="row-fluid">
								<div class="span2">
									<div class="well well-small well-show">          	
		                        		<dt>Ime proizvoda:</dt>
		                            	<% if invoice.product.name %>
		                              		<dd><%= invoice.product.name %></dd>
		                            	<% else %>
		                              		<dd>N/A</dd>
		                            	<% end %>
		                            </div>
								</div>
								<div class="span2">
									<div class="well well-small well-show"> 
		                            	<dt>Količina:</dt>
		                            	<% if invoice.quantity %>
		                              		<dd><%= invoice.quantity %></dd>
		                            	<% else %>
		                              		<dd>N/A</dd>
		                            	<% end %>
		                            </div>
								</div>
								<div class="span2">
									<div class="well well-small well-show"> 
		                            	<dt>Cijena:</dt>
		                            	<% if invoice.price %>
		                              		<dd><%= number_with_precision(invoice.price, :precision => 2) %></dd>
		                            	<% else %>
		                              		<dd>N/A</dd>
		                            	<% end %>                    
		                        	</div>
								</div>
								<div class="span2">
									<div class="well well-small well-show">          	
		                        		<dt>Prodajna cijena:</dt>
			                        	<% if invoice.selling_price %>
			                          		<dd><%= number_with_precision(invoice.selling_price, :precision => 2) %></dd>
			                        	<% else %>
			                          		<dd>N/A</dd>
			                        	<% end %>
		                            </div>
								</div>
								<div class="span2">
									<div class="well well-small well-show">          	
		                        		<dt>Razlika:</dt>
			                        	<% if invoice.difference_price %>
			                          		<dd><%= number_with_precision(invoice.difference_price, :precision => 2) %></dd>
			                        	<% else %>
			                          		<dd>N/A</dd>
			                        	<% end %>
