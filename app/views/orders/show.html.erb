			<div class="span12 well">
				<div class="span12">
					<dl class="dl-horizontal">
						<div class="well well-small well-show">
							<dt>Klijent:</dt>
							<% if @order.client.name %>
							  <dd><%= @order.client.name %></dd>							  
							<% else %>
							  <dd>N/A</dd>
							<% end %>
							<dt>Datum:</dt>
							<% if @order.order_date %>
								<dd><%= @order.order_date %></dd>
							<% else %>
							  <dd>N/A</dd>
							<% end %>
						</div>
						<div class="well well-small well-show">
