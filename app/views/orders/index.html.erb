                    $('.generate-report').attr('href','../client/income_report.pdf?id=' + $('.user-id-stats').val() + '&month=' + $('.report-months option:selected').val() + '&year=' + $('.report-year option:selected').val() + '');
                });

                $('.report-year').change(function() {
                    $('.generate-report').attr('href','../client/income_report.pdf?id=' + $('.user-id-stats').val() + '&month=' + $('.report-months option:selected').val() + '&year=' + $('.report-year option:selected').val() + '');
