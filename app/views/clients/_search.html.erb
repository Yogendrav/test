<div class="span12">
	<div class="search-div search-clients">
		<%= form_for @search, :url => clients_path, :html => {:method => :get} do |f| %>
			<div class="span3">
				<fieldset>
					<div class="control-group">
						<label class="control-label">Pretraži klijente: </label>
						<div class="controls">
							<%= f.text_field :name_like, :class => "input-xlarge" unless params[:controller] == 'orders' && params[:action] == 'index' %>
						</div>
					</div>
				</fieldset>
			</div>
			<div class="span1">
				<fieldset>
					<div class="control-group">
						<label>&nbsp;</label>
						<%= f.submit 'Traži', :class => "btn btn-primary btn-coffee" %>
					</div>
				</fieldset>
			</div>
		<% end %>
	</div>
</div>