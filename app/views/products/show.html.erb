
<% if flash[:notice] -%>
    <br />
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Uspješno</strong> ste dodali novi proizvod!
    </div>
<% end -%>

  <div class="row-fluid content">
    <div class="span12 content-left row-padding">
      <h2>Podaci o proizvodu - <%= @product.name %></h2>
      <div class="row-fluid">
            <div class="span12 well">
                <div class="span3">
                    <dl class="dl-horizontal">
                        <!-- <div class="well well-small well-show">
                            <dt>Dobavljač:</dt>
                            <%# if @product.supplier.name %>
                              <dd><%#= @product.supplier.name %></dd>
                            <%# else %>
                              <dd>N/A</dd>
                            <%# end %>
                        </div> -->
                        <div class="well well-small well-show">
                            <dt>Šifra proizvoda:</dt>
                            <% if @product.product_code %>
                              <dd><%= @product.product_code %></dd>
                            <% else %>
                              <dd>N/A</dd>
                            <% end %>
                        </div>
                        <div class="well well-small well-show">
                            <dt>Opis proizvoda:</dt>
                            <% if @product.description %>
                              <dd><%= @product.description %></dd>
                            <% else %>
                              <dd>N/A</dd>
                            <% end %>
                        </div>
                    </dl>
                </div>
                <div class="span4">
                    <dl class="dl-horizontal">
                        <div class="well well-small well-show">
                            <dt>Naziv proizvoda:</dt>
                            <% if @product.name %>
                              <dd><%= @product.name %></dd>
                            <% else %>
                              <dd>N/A</dd>
                            <% end %>
                        </div>
                    </dl>
                </div>
                <div class="span4">
                    <dl class="dl-horizontal">
                        <div class="well well-small well-show">
                            <dt>Nabavna cijena:</dt>
                            <% if @product.purchase_price %>
                              <dd><%= number_with_precision(@product.purchase_price, :precision => 2) %></dd>
                            <% else %>
                              <dd>N/A</dd>
                            <% end %>
                        </div>
                    </dl>
                </div>
            </div>
            <div class="row-fluid">
                <div class="form-actions">
                    <% if current_user.has_role? :admin %>
                    <%= link_to 'Uredi', edit_product_path(@product), :class => "btn btn-warning btn-edit btn-coffee" %>
                    <% end %>
                </div> 
            </div>
      </div>
    </div>
  </div>

