                        <div class="well well-small well-show">
                        	<dt>Prodajna cijena:</dt>
                            <% if @contract.selling_price %>
                              <dd><%= number_with_precision(@contract.selling_price, :precision => 2)  %></dd>
                            <% else %>
                              <dd>N/A</dd>
                            <% end %>
                        </div>
					</dl>
				</div>
				<div class="span4">
					<dl class="dl-horizontal">
						<div class="well well-small well-show">
							<dt>Količina:</dt>
							<% if @contract.quantity %>
							  <dd><%= @contract.quantity %></dd>
							<% else %>
							  <dd>N/A</dd>
							<% end %>
                        </div>
                        <div class="well well-small well-show">
                            <dt>Razlika:</dt>
                            <% if @contract.difference_price %>
                              <dd><%= number_with_precision(@contract.difference_price, :precision => 2) %></dd>
                            <% else %>
                              <dd>N/A</dd>
                            <% end %>
                        </div>
					</dl>
				</div>
			</div>
			<div class="row-fluid">
				<div class="form-actions">
					<% if current_user.has_role? :admin %>
					<%= link_to 'Uredi', edit_contract_path(@contract), :class => "btn btn-warning btn-edit btn-coffee" %>
					<% end %>
