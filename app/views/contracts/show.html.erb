
<% if flash[:notice] -%>
	<br />
	<div class="alert alert-success">
		<button type="button" class="close" data-dismiss="alert">×</button>
		<strong>Uspješno</strong> ste dodali novi ugovor!
	</div>
<% end -%>

  <div class="row-fluid content">
	<div class="span12 content-left">
	  <h2>Podaci o ugovoru - <%= @contract.id %></h2>
	  <div class="row-fluid">
			<div class="span12 well">
				<div class="span3">
					<dl class="dl-horizontal">
						<div class="well well-small well-show">
							<dt>Klijent:</dt>
							<% if @contract.client.name %>
							  <dd><%= @contract.client.name %></dd>
							<% else %>
							  <dd>N/A</dd>
							<% end %>
						</div>
						<div class="well well-small well-show">
						<!--<dt>Proizvod:</dt>
