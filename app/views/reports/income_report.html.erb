							  		<th>Ime proizvoda</th>
							  		<th>Količina</th>
							  		<th>Cijena</th>
								</tr>
						  	</thead>
						  	<tbody>
						  		<% @invoices.each do |invoice| %>
									<tr>
								  		<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
								  			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
								  			<%= invoice.order_id %>
								  		</td>
								  		<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
								  			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
								  			<%= invoice.product.name %>
								  		</td>
								  		<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
								  			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
								  			<%= invoice.quantity %>
								  		</td>
								  		<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
								  			&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
								  			<%= invoice.price %>
								  		</td>
									</tr>
								<% end %>
								<br />
