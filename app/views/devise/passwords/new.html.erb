
<div class="row-fluid">
	<div class="row-fluid content offset4">
		<div class="span8 content-left">
			

				<div class="span5">
					<h2>Zaboravili ste lozinku?</h2>
					<fieldset>
						<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), 
						:html => { :method => :post, :class => 'well form-horizontal clearfix' }) do |f| %>
						<%= devise_error_messages! %>
						<div class="control-group">
							<%= f.label :email, 'E-mail', :class => "control-label" %>
							<div class="controls">
								<%= f.email_field :email, :class => "input-xlarge" %>
							</div>
						</div>
						<div class="control-group">	
							<div class="form-actions pull-right">
								<%= f.submit "PoÅ¡aljite mi novu lozinku", :class => "btn btn-large btn-primary btn-custom" %>
							</div>
						</div>
					</fieldset>	
					<% end %>
				</div>

				<div class="span3">
				</div>
			</div>
		</div>
		<div class="span4">
		</div>
	</div>
</div>
